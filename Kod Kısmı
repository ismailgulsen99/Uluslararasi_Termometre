#include <dht.h>

dht DHT;

#define DHT11_PIN 7

void setup() {
  Serial.begin(9600);
}

void loop() {
  int okunan_Deger = DHT.read11(DHT11_PIN);
  //Serial.println("Sicaklik = " + String(DHT.temperature));

  Serial.print("Sicaklik = ");
  Serial.print(DHT.temperature);
  Serial.println(" °C");  //santigrat derece için
  
  Serial.print(DHT.temperature + 273.15);
  Serial.println(" K"); //kelvin için

  Serial.print((DHT.temperature * 1.8) + 32);
  Serial.println(" °F");  //fahrenheit için

  Serial.print("Nem = ");
  Serial.println(DHT.humidity); //nem değeri

  delay(2000);
}
